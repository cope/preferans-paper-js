{
	"name": "preferans-paper-js",
	"version": "2.0.0",
	"description": "nodejs paper for preferans",
	"engines": {
		"node": ">=8.9"
	},
	"main": "lib/prefPaper.js",
	"scripts": {
		"build": "tsc",
		"lint": "tslint -p tsconfig.json",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"docs": "yarn build && jsdoc README.md ./lib/ -r -a all -d docs",
		"test": "nyc --reporter=lcov --reporter=html mocha -r ts-node/register test/**/*.spec.ts",
		"coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
		"sonar": "sonarjs -e .sonarlint/**,node_modules/**,coverage/**,.nyc_output/**"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cope/preferans-paper-js.git"
	},
	"keywords": [
		"paper",
		"preferans",
		"cards"
	],
	"author": "Predrag Stojadinovic",
	"license": "Unlicense",
	"bugs": {
		"url": "https://github.com/cope/preferans-paper-js/issues"
	},
	"homepage": "https://github.com/cope/preferans-paper-js#readme",
	"dependencies": {
		"@types/lodash": "^4.14.119",
		"lodash": "^4.17.10",
		"mathjs": "^5.0.4"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.5",
		"chai": "^4.1.2",
		"coveralls": "^3.0.2",
		"mocha": "^5.2.0",
		"nyc": "^12.0.2",
		"prettier": "^1.15.3",
		"sonarjs": "^1.0.0",
		"source-map-support": "^0.5.9",
		"ts-node": "^7.0.1",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.17.0",
		"typescript": "^3.2.2"
	}
}
